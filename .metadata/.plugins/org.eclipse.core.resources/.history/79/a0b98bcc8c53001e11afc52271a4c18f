package com.aurionpro.model;

import java.util.ArrayList;
import java.util.List;
import java.util.stream.Collectors;

public class ShoppingCart implements IItems {

	private List<IItems> cartItems;
	
	public ShoppingCart() {
		this.cartItems = new ArrayList<IItems>();
	}
	
	public List<IItems> getCartItem(){
		return cartItems;
	}
	
	public void addItemToCart(IItems item){
		this.cartItems.add(item);
	}
	
	public double getItemPrice() {
		return this.cartItems.stream().collect(Collectors.summarizingDouble(IItems::getItemPrice()));
	}
}
